<h1> 編輯密碼 </h1>


<%= form_with model: Current.user, url: password_path do |form|%>
  
  <% if form.object.errors.any?%>
    <div class="alert alert-danger">
      <% form.object.errors.full_messages.each do |errors| %>
        <div><%=errors%></div>
      <%end%>
    </div>
  <%end%>


  <div class="mb-3">
    <%= form.label :password, "密碼", class: "form-label" %>
    <%= form.password_field :password, class: "form-control", placeholder: "password" %>
  </div>
  <div class="mb-3">
    <%= form.label :password_confirmation, "確認密碼", class: "form-label" %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "confirm password" %>
  </div>

  <div class="mb-3">
    <%= form.submit "更新密碼", class: "btn btn-primary" %>
  </div>
<%end%>